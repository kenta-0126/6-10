<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">


<h2>User info</h2>
<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "noimage.jpg") %>

<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>

<submit class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id"></submit>

<br>
<h2 class="mt-3">New Book</h2>

<%= form_with model: @book, local: true do |f| %>
<div class="form-group">
 <label>Title</label>
 <%= f.text_field :title %>
</div>

<div class="form-group">
 <label>Opinion</label>
 <%= f.text_area :body %>
</div>
<div class="form-group">
 <%= f.submit 'Create Book' %>
</div>
<% end %>
   </div>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-hover teable-inverse">
    
    <tbody>

    <tr>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>

      <td>
        <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
        <%= link_to "Destroy", book_path(@book.id), method: :delete %>
        <% end %>
      </td>
     
    </tr>
  
  </tbody>
  </table>
</div>

  </div>
</div>